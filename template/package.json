{
  "name": "mocha-test",
  "version": "1.0.0",
  "description": "mocha单元测试，nyc代码覆盖率检查，数据网页可视化",
  "main": "index.js",
  "scripts": {
    "test": "mocha --recursive --reporter mochawesome --require babel-core/register",
    "cover": "cross-env NODE_ENV=test nyc mocha"
  },
  "keywords": [
    "testing",
    "Mocha"
  ],
  "author": "guozhikun",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "~6.2.1",
    "babel-preset-es2015": "~6.1.18",
    "chai": "~3.4.1",
    "mocha": "~2.3.4",
    "mochawesome": "~3.1.1",
    "babel-plugin-istanbul": "^5.1.1",
    "nyc": "^13.3.0",
    "babel-register":"^6.26.0",
    "babel-preset-env":"^1.6.1",
    "cross-env":"^5.1.3"
  },
  "dependencies": {
    "node-fetch": "~1.3.3",
    "superagent": "~5.1.0"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
